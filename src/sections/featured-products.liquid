<section class="featured-products" data-section-type="featured-products" data-section-id="{{ section.id }}">

  {% if section.settings.heading != blank %}
    <h2 class="text__wayfinder wayfinder__button-color wayfinder__level"><span>{{ section.settings.heading }}</span></h2>
  {% endif %}

  <div class="featured-products__products grid-columns-{{ settings.products_per_row }}">
    {% for block in section.blocks %}
      {%- assign product = all_products[block.settings.product] -%}
      {% assign custom_image = block.settings.custom_image %}
      <div class="grid-columns__item">
        {% include 'product-overview' %}
      </div>
      
    {% endfor %}
  </div>

</section>
{% schema %}
  {
    "name": "Featured Products",
    "max_blocks": 3,
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "product",
        "name": "Product",
        "settings": [
          {
            "type": "product", 
            "id": "product",
            "label": "Product"
          },
          {
            "type": "image_picker",
            "id": "custom_image",
            "label": "Custom Image",
            "info": "Default is the first product image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured Products",
        "category": "Feature"
      }
    ]
  }
{% endschema %}