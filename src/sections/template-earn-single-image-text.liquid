{% if section.settings.accent_image != blank %}
  {% assign margin = 'has_accent' %}
{% else %}
  {% assign margin = 'no_accent' %} 
{% endif %}
<section class="single-image-text {{ margin }} {{ section.settings.row_direction }}" data-section-type="single-image-text" data-section-id="{{ section.id }}">
	<div class="single-image-text__content flex-container flex-container__{{ section.settings.vertical_alignment }}--{{ section.settings.horizontal_alignment }}">
		{% if section.settings.icon_image != blank %}
			<img class="single-image-text__icon" src="{{ section.settings.icon_image | img_url: 'master' }}">
		{% endif %}
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading | replace_first: '<p>', '' | replace: '<p>', '<br>' | replace: '</p>', '' }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <h3>{{ section.settings.subheading | replace_first: '<p>', '' | replace: '<p>', '<br>' | replace: '</p>', '' }}</h3>
    {% endif %}
		{% if section.settings.caption != blank %}
			{{ section.settings.caption }}
		{% endif %}
    <a class="button {{ section.settings.button_style }} button__intent" href="{{ page.url }}?st_intent=st:core:home">
      {{ section.settings.button_text | escape }}
    </a>
    {% if section.settings.accent_image != blank %}
      <div class="single-image-text__accent-image">
      	<img src="{{ section.settings.accent_image | img_url: '250x' }}">
      </div>
    {% endif %}
	</div>
	<div class="single-image-text__image">
		{% if section.settings.large_image %}
			<img src="{{ section.settings.large_image | img_url: 'master' }}">
		{% else %}
			{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
		{% endif %}
	</div>
</section>
{% schema %}
