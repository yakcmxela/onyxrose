<section class="hero-grid" style="height: {{ section.settings.height }}vh;" data-section-type="hero-grid" data-section-id="{{ section.id }}">
	<div class="hero-grid__left">
		{% for block in section.blocks %}
			{% if block.type == "grid_text_left" %}
				<span>+</span>
				{% if block.settings.heading != blank %}
					<h3>{{ block.settings.heading }}</h3>
				{% endif %}
				{% if block.settings.caption %}
					<p>{{ block.settings.caption }}</p>
				{% endif %}
			{% endif %}
		{% endfor %}
	</div>
	{% if section.settings.featured_image %}
		<img src="{{ section.settings.featured_image | img_url: '200x' }}">
	{% endif %}
	<div class="hero-grid__right">
		{% for block in section.blocks %}
			{% if block.type == "grid_text_right" %}
				<span>+</span>
				{% if block.settings.heading != blank %}
					<h3>{{ block.settings.heading }}</h3>
				{% endif %}
				{% if block.settings.caption %}
					<p>{{ block.settings.caption }}</p>
				{% endif %}
			{% endif %}
		{% endfor %}
	</div>
</section>
