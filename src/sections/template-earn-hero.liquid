<section class="hero {{ section.settings.text_color }} hero__earn" style="background-image: url({{ section.settings.hero_image | img_url: 'master' }}); height: {{ section.settings.height }}vh;" data-section-type="hero" data-section-id="{{ section.id }}">
  <div class="hero__content flex-container flex-container__{{ section.settings.vertical_alignment }}--{{ section.settings.horizontal_alignment }}">
    <h1 class="hero__heading">
      {% assign heading = section.settings.heading | replace: '<p>', '<span>' | replace: '</p>', '</span>' %}
      {% if heading != blank %}
        {{ heading  }}
      {% else %}
        {{ page.title }}
      {% endif %}
    </h1>
    {% if section.settings.caption != blank %}
      <div class="hero__caption">
        <p>{{ section.settings.caption }}</p>
      </div>
    {% endif %}
    {% assign page = pages[section.settings.button_link] %}
    {% if section.settings.button_text %}
      {%- assign button_text = section.settings.button_text %}
    {% else %}
      {%- assign button_text = page.title -%}
    {% endif %}
    <a class="hero__link button {{ section.settings.button_style }} button__intent" href="{{ page.url }}?st_intent=st:core:home" title="{{ page.title }}">{{ button_text }}</a>
  </div>
</section>
