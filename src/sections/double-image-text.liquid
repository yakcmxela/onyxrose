{%- comment -%}
  This is a required section for the Shopify Theme Store.
  It is available when you add the "Image with text" section in the theme editor.

  Theme Store required settings
  - Image
  - Heading: title of the block
  - Text: description of the block

  Theme Store optional settings
  - Button label: label associated with the button
  - Button link: link of the button
{%- endcomment -%}
{% if section.settings.accent_image != blank %}
  {% assign margin = 'has_accent' %}
{% else %}
  {% assign margin = 'no_accent' %}
{% endif %}
<section class="double-image-text {{ margin }} {{ section.settings.row_direction }} {{ section.settings.background_size }}">
  <div class="double-image-text__images">
    <div class="double-image-text__image">
      {% if section.settings.image_1 != blank %}
        <img src="{{ section.settings.image_1 | img_url: 'master' }}">
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
    <div class="double-image-text__image">
      {% if section.settings.image_2 != blank %}
        <img src="{{ section.settings.image_2 | img_url: 'master' }}">
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  </div>

  <div class="double-image-text__text">
    <div class="flex-container flex-container__{{ section.settings.vertical_alignment }}--{{ section.settings.horizontal_alignment }}">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading | replace_first: '<p>', '' | replace: '<p>', '<br>' | replace: '</p>', '' }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <h3>{{ section.settings.subheading | replace_first: '<p>', '' | replace: '<p>', '<br>' | replace: '</p>', '' }}</h3>
      {% endif %}
      {% if section.settings.caption != blank %}
        {{ section.settings.caption }}
      {% endif %}
      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a class="button {{ section.settings.button_style }}" href="{{ section.settings.button_link }}">
          {{ section.settings.button_text | escape }}
        </a>
      {% endif %}
      {% if section.settings.accent_image != blank %}
        <div class="double-image-text__accent-image">
          <img src="{{ section.settings.accent_image | img_url: '300x' }}">
        </div>
      {% endif %}
    </div>
  </div>

</section>

